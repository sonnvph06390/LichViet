<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/ic_item_danhngon"
            android:src="@drawable/sukien_canhan_compact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_item_danhngon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_item_tacgia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/ic_item_heart_danhngon"
            android:src="@drawable/heart_tinhduyen_visible"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/ic_item_chiase_danhngon"
            android:src="@drawable/btn_chiase1"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorClouds" />
</LinearLayout>